<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evia.dagger2sampleapplication.MainActivity">

    <TextView
        android:id="@+id/global_counter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/activity_counter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_counter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/fragment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/global_counter" />

    <fragment
        android:id="@+id/fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.evia.dagger2sampleapplication.MainFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_counter" />

</android.support.constraint.ConstraintLayout>
